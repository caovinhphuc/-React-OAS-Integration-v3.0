# ============================================
# üîß GOOGLE SHEETS PROJECT - Environment Config
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# üîê GOOGLE CLOUD CONFIGURATION (REQUIRED)
# ============================================

# Service Account Email (from Google Cloud Console)
REACT_APP_GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Service Account Private Key (copy entire key including BEGIN/END lines)
REACT_APP_GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Google Cloud Project ID
REACT_APP_GOOGLE_PROJECT_ID=your-project-id

# ============================================
# üìä GOOGLE SHEETS CONFIGURATION (REQUIRED)
# ============================================

# Google Sheet ID (from URL: https://docs.google.com/spreadsheets/d/SHEET_ID/edit)
REACT_APP_GOOGLE_SHEET_ID=your-google-sheet-id

# ============================================
# üìÅ GOOGLE DRIVE CONFIGURATION (OPTIONAL)
# ============================================

# Google Drive Folder ID (from URL: https://drive.google.com/drive/folders/FOLDER_ID)
REACT_APP_GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id

# ============================================
# üìß EMAIL CONFIGURATION (OPTIONAL - for alerts)
# ============================================

# Email Service (gmail, outlook, etc.)
REACT_APP_EMAIL_SERVICE=gmail

# Email Address (sender)
REACT_APP_EMAIL_USER=your-email@gmail.com

# App Password (NOT your regular password - generate from Google Account)
REACT_APP_EMAIL_PASS=your-app-password

# Recipient Email (for alerts)
REACT_APP_ALERT_EMAIL_TO=recipient@example.com

# ============================================
# üì± TELEGRAM CONFIGURATION (OPTIONAL - for alerts)
# ============================================

# Telegram Bot Token (from @BotFather)
REACT_APP_TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Telegram Chat ID (your chat/group ID)
REACT_APP_TELEGRAM_CHAT_ID=your-telegram-chat-id

# ============================================
# üåê API CONFIGURATION
# ============================================

# Backend API Base URL
REACT_APP_API_BASE_URL=http://localhost:3003/api

# ============================================
# ‚öôÔ∏è APP SETTINGS
# ============================================

# Alert Thresholds
REACT_APP_ALERT_THRESHOLD_LOW=10
REACT_APP_ALERT_THRESHOLD_HIGH=100

# Server Port (backend)
PORT=3003
