# Production Environment Variables
# Copy this to .env.production and fill with actual values

# ==================================================
# APPLICATION SETTINGS
# ==================================================
NODE_ENV=production
REACT_APP_ENV=production

# ==================================================
# FRONTEND CONFIGURATION
# ==================================================
REACT_APP_API_URL=https://your-domain.com/api
REACT_APP_APP_NAME=React OAS Integration
REACT_APP_VERSION=1.0.0

# ==================================================
# BACKEND CONFIGURATION
# ==================================================
PORT=3001
API_BASE_URL=/api
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# ==================================================
# DATABASE CONFIGURATION
# ==================================================
# MongoDB
MONGODB_URI=mongodb://username:password@host:port/database_name
DB_NAME=react_oas_integration

# Redis
REDIS_URL=redis://username:password@host:port

# ==================================================
# AUTOMATION SYSTEM
# ==================================================
# Google Sheets API
GOOGLE_CREDENTIALS_PATH=/app/config/google-credentials.json
GOOGLE_SHEETS_ID=your_production_sheets_id
GOOGLE_DRIVE_FOLDER_ID=your_production_drive_folder_id

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_production_email@domain.com
SMTP_PASSWORD=your_production_app_password
EMAIL_FROM_NAME=React OAS Integration System

# ==================================================
# EXTERNAL INTEGRATIONS
# ==================================================
# OpenAPI Specification
OAS_SPEC_URL=https://api.your-production-service.com/openapi.json
OAS_BACKUP_URL=https://backup.your-production-service.com/openapi.json

# Webhook URLs
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/PRODUCTION/WEBHOOK

# ==================================================
# CLOUD STORAGE (Optional)
# ==================================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-production-bucket

# Azure Storage
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER_NAME=oas-production-backups

# ==================================================
# MONITORING & LOGGING
# ==================================================
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==================================================
# SECURITY SETTINGS
# ==================================================
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# ==================================================
# PERFORMANCE SETTINGS
# ==================================================
CACHE_TTL=3600
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
